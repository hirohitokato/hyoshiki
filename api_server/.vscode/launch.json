{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch server.ts",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/server.ts",
            "preLaunchTask": "compile typescript",
            
            "outFiles": [
                "${workspaceFolder}/dist/*.js"
            ]
        }
    ]
}